<div class="row mb-2">
	<div class="col-4 col-lg-2">
		<img src="/images/categories/{{slug}}-gray.webp" alt="{{categoryName}}" class="img-thumbnail" style="width:100%" id="category-image">
	</div>
	<div class="col-8 col-lg-10">
		<h1 class="mb-0" id="category-title">{{categoryName}}</h1>
		<div id="category-description">{{{description}}}</div>
	</div>
</div>

<div class="row">
	<div class="col">
		<p class="fw-light fst-italic mb-0">Showing <span id="numShown"></span> of <span id="numTotal"></span></p>
	</div>
	<div class="col text-end">
		<a href="#" id="showall" class="btn btn-outline-green btn-sm">Show All</a>
	</div>
</div>
<table id="productdata" class="table table-striped table-collapse">
	<thead>{{{tablehead}}}</thead>
	<tbody>{{{tablebody}}}</tbody>
</table>