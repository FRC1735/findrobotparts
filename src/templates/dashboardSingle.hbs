<form id="{{idPrefix}}Form">
	<div class="form-floating mb-3">
		<select class="form-select" id="{{idPrefix}}ProductGroup">
			<option selected>Open this select menu</option>
			<option value="1">One</option>
			<option value="2">Two</option>
			<option value="3">Three</option>
		</select>
		<label for="{{idPrefix}}ProductGroup">Product Group</label>
	</div>

	<div class="form-floating mb-3">
		<input type="text" class="form-control" id="{{idPrefix}}ProductName">
		<label for="{{idPrefix}}ProductName">Product Name</label>
	</div>

	<div class="form-floating mb-3">
		<input type="text" class="form-control" id="{{idPrefix}}ImagePath">
		<label for="{{idPrefix}}ImagePath">Image Path</label>
	</div>

	<p class="h2">Vendor Links</p>
	<div class="row mb-3">
		{{#each vendorLinks}}
		<div class="col form-floating">
			<input type="text" class="form-control" id="{{idPrefix}}VendorName{{@index}}" value="{{this.name}}">
			<label for="{{idPrefix}}VendorName{{@index}}">Vendor Name</label>
		</div>
		<div class="col form-floating">
			<input type="text" class="form-control" id="{{idPrefix}}VendorLink{{@index}}" value="{{this.link}}">
			<label for="{{idPrefix}}VendorLink{{@index}}">Vendor Link</label>
		</div>
		{{/each}}
	</div>

	<button type="submit" class="btn btn-green">Submit</button>
</form>